{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist/node",
        "sourceMap": true,
        "removeComments": true,
        "strictNullChecks": true,
        "target": "es2015",
        "typeRoots": ["./node_modules/@types"],
        "lib": [
            "es2015",
            "es5",
            "es6"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}